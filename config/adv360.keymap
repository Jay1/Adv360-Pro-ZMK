#include <behaviors.dtsi>
#include <dt-bindings/zmk/backlight.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/rgb.h>

/ {
    behaviors {
        #include "macros.dtsi"
      #include "version.dtsi"
      #ifndef VERSION_MACRO


        #endif

        hm: homerow_mods {
            compatible = "zmk,behavior-hold-tap";
            label = "HOMEROW_MODS";
            #binding-cells = <2>;
            tapping-term-ms = <200>;
            quick_tap_ms = <175>;
            flavor = "tap-preferred";
            bindings = <&kp>, <&kp>;
        };
    };

    macros {
        MacOS_layer: MacOS_layer {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&bt BT_SEL 2 &to 1>;
            label = "MACOS_LAYER";
        };

        WIn_Layer_0: WIn_Layer {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&bt BT_SEL 0 &to 0>;
            label = "WIN_LAYER";
        };

        WIn_Layer_1: WIn_Layer_1 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&bt BT_SEL 1 &to 0>;
            label = "WIN_LAYER_1";
        };
    };

    keymap {
        compatible = "zmk,keymap";

        Windows {
            bindings = <
&kp ESC    &kp N1     &kp N2        &kp N3         &kp N4        &kp N5  &to 1                                                                   &mo 3              &kp N6  &kp N7  &kp N8     &kp N9   &kp N0    &kp MINUS
&kp TAB    &kp Q      &kp W         &kp E          &kp R         &kp T   &kp LEFT_BRACKET                                                        &kp RIGHT_BRACKET  &kp Y   &kp U   &kp I      &kp O    &kp P     &kp BSLH
&mo 2      &kp A      &kp S         &kp D          &kp F         &kp G   &kp GRAVE         &kp LEFT_ALT  &kp HOME      &kp PAGE_UP    &kp RCTRL  &kp END            &kp H   &kp J   &kp K      &kp L    &kp SEMI  &kp SQT
&kp LSHFT  &kp Z      &kp X         &kp C          &kp V         &kp B                                   &kp END       &kp PAGE_DOWN                                &kp N   &kp M   &kp COMMA  &kp DOT  &kp FSLH  &kp RSHFT
&none      &kp GRAVE  &kp LEFT_WIN  &kp LG(SPACE)  &kp LEFT_ALT          &kp SPACE         &kp LCTRL     &mo 2         &kp DEL        &kp ENTER  &kp BACKSPACE              &none   &none      &none    &none     &mo 2
            >;
        };

        MacOS {
            bindings = <
&kp EQUAL  &kp N1     &kp N2            &kp N3     &kp N4             &kp N5  &to 0                                                                &trans    &kp N6  &kp N7  &kp N8     &kp N9   &kp N0    &kp MINUS
&kp ESC    &kp Q      &kp W             &kp E      &kp R              &kp T   &trans                                                               &trans    &kp Y   &kp U   &kp I      &kp O    &kp P     &kp BSLH
&kp TAB    &kp A      &kp S             &kp D      &kp F              &kp G   &trans     &kp LALT          &kp HOME      &kp PAGE_UP    &trans     &trans    &kp H   &kp J   &kp K      &kp L    &kp SEMI  &kp SQT
&kp LSHFT  &kp Z      &kp X             &kp C      &kp V              &kp B                                &kp END       &kp PAGE_DOWN                       &kp N   &kp M   &kp COMMA  &kp DOT  &kp FSLH  &kp RSHFT
&mo 2      &kp GRAVE  &kp LEFT_CONTROL  &kp GLOBE  &kp LG(LA(SPACE))          &kp SPACE  &kp LEFT_COMMAND  &mo 2         &kp DEL        &kp ENTER  &kp BSPC          &trans  &trans     &trans   &trans    &mo 2
            >;
        };

        Navigation {
            bindings = <
&kp F1          &kp F2  &kp F3     &kp F4     &kp F5     &kp F6  &tog 1                                                       &mo 3    &kp F7          &kp F8    &kp F9        &kp F10          &kp F11  &kp F12
&trans          &trans  &trans     &trans     &trans     &trans  &none                                                        &none    &trans          &trans    &none         &trans           &trans   &trans
&mo 2           &trans  &kp LG(S)  &kp LG(C)  &kp LG(B)  &trans  &none   &trans            &kp LG(LS(S))      &trans  &trans  &none    &kp LEFT_ARROW  &kp DOWN  &kp UP_ARROW  &kp RIGHT_ARROW  &trans   &trans
&kp LEFT_SHIFT  &trans  &trans     &none      &trans     &trans                            &trans             &trans                   &kp LG(N)       &trans    &trans        &trans           &trans   &kp RIGHT_SHIFT
&trans          &trans  &trans     &trans     &trans             &none   &kp LEFT_CONTROL  &trans             &trans  &trans  &kp DEL                  &trans    &trans        &trans           &trans   &trans
            >;
        };

        mod {
            bindings = <
&none  &WIn_Layer_0  &WIn_Layer_1  &MacOS_layer  &bt BT_SEL 3  &bt BT_SEL 4  &none                                                  &trans                  &none  &none       &none       &none  &none  &none
&none  &none         &none         &none         &none         &none         &bootloader                                            &bootloader             &none  &none       &none       &none  &none  &none
&none  &none         &none         &none         &none         &none         &none        &none  &none      &bt BT_CLR  &none       &rgb_ug RGB_MEFS_CMD 5  &none  &none       &none       &none  &none  &none
&none  &none         &none         &none         &none         &none                             &none      &none                                           &none  &none       &none       &none  &none  &none
&none  &none         &none         &none         &none                       &none        &none  &none      &none       &bl BL_TOG  &rgb_ug RGB_TOG                &bl BL_INC  &bl BL_DEC  &none  &none  &none
            >;
        };
    };
};
